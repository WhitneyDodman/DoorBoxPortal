<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.application.CONFIG_FILES</param-name>
        <param-value>/WEB-INF/faces-config.xml</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.CONFIG_FILES</param-name>
        <param-value>/WEB-INF/faces-config.xml</param-value>
    </context-param>
    <!--context-param>
        <param-name>javax.faces.STATE_SAVING_METHOD</param-name>
        <param-value>client</param-value>
    </context-param-->
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <context-param>
        <param-name>primefaces.THEME</param-name>
        <param-value>aristo</param-value>
    </context-param>
    <context-param>
        <param-name>primefaces.PUBLIC_CAPTCHA_KEY</param-name>
        <param-value>6LdTgyYTAAAAAK-eV-j2VsN8zcZx_DOoSSyUvTY2</param-value>
    </context-param>
    <context-param>
        <param-name>primefaces.PRIVATE_CAPTCHA_KEY</param-name>
        <param-value>6LdTgyYTAAAAAKE3ySA5VunsuWNcu0hx5_647Mkr</param-value>
    </context-param>
    <context-param>
        <param-name>primefaces.UPLOADER</param-name>
        <param-value>commons</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.INTERPRET_EMPTY_STRING_SUBMITTED_VALUES_AS_NULL</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <param-name>UAFS_ROOT</param-name>
        <param-value>/home/glassfish/glassfish4/glassfish/domains/domain1/docroot</param-value>
    </context-param>
    <context-param>
        <param-name>MAGICK_CONVERT</param-name>
        <param-value>/www/bin/ImageMagick-7.0.2-Q8/convert.exe</param-value>
    </context-param>
    <filter>
        <description>Authorization filter limits access to only login.xhtml unless logged in.</description>
        <filter-name>AuthFilter</filter-name>
        <filter-class>doorbox.portal.filters.AuthFilter</filter-class>
    </filter>
    <filter>
        <filter-name>PrimeFaces FileUpload Filter</filter-name>
        <filter-class>org.primefaces.webapp.filter.FileUploadFilter</filter-class>
        <init-param>
            <param-name>thresholdSize</param-name>
            <param-value>10000000</param-value>
        </init-param>
        <init-param>
            <param-name>uploadDirectory</param-name>
            <param-value>/tmp</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>*.xhtml</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>PrimeFaces FileUpload Filter</filter-name>
        <servlet-name>Faces Servlet</servlet-name>
    </filter-mapping>
    <listener>
        <listener-class>doorbox.portal.listeners.SessionWatchdog</listener-class>
    </listener>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>MobileAPI</servlet-name>
        <servlet-class>doorbox.portal.servlet.MobileAPI</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PaypalIPNHandler</servlet-name>
        <servlet-class>doorbox.portal.servlet.PaypalIPNHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PaypalCallback</servlet-name>
        <servlet-class>doorbox.portal.servlet.PaypalCallback</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PaypalPDTHandler</servlet-name>
        <servlet-class>doorbox.portal.servlet.PaypalPDTHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MobileAPI</servlet-name>
        <url-pattern>/MobileAPI</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PaypalIPNHandler</servlet-name>
        <url-pattern>/PaypalIPNHandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PaypalPDTHandler</servlet-name>
        <url-pattern>/PaypalPDTHandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PaypalCallback</servlet-name>
        <url-pattern>/PaypalCallback</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.xhtml</welcome-file>
    </welcome-file-list>
    <error-page>
        <exception-type>javax.faces.application.ViewExpiredException</exception-type>
        <location>/login.xhtml</location>
    </error-page>
    <error-page>
        <exception-type>javax.faces.FacesException</exception-type>
        <location>/login.xhtml</location>
    </error-page>
</web-app>
